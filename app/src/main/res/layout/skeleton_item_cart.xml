<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/gray_200"
    android:paddingHorizontal="13dp"
    android:paddingVertical="18dp">

        <View
            android:id="@+id/skeleton_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/gray_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/skeleton_product_name"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_500"
            app:layout_constraintBottom_toBottomOf="@id/skeleton_select"
            app:layout_constraintStart_toEndOf="@id/skeleton_select"
            app:layout_constraintTop_toTopOf="@id/skeleton_select"
            />

        <View
            android:id="@+id/skeleton_product"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/skeleton_select"
            app:layout_constraintTop_toBottomOf="@id/skeleton_select" />

        <View
            android:id="@+id/skeleton_price"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:background="@color/gray_500"
            app:layout_constraintBottom_toTopOf="@id/skeleton_add_btns"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <View
            android:id="@+id/skeleton_add_btns"
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:background="@color/gray_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <View
            android:id="@+id/skeleton_close"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@color/gray_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

